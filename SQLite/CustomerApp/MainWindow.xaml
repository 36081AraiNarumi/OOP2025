<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="顧客管理" Height="600" Width="450">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBox x:Name="NameTextBox" PlaceholderText="名前" Margin="5"/>
            <TextBox x:Name="PhoneTextBox" PlaceholderText="電話番号" Margin="5"/>
            <TextBox x:Name="PostalCodeTextBox" PlaceholderText="郵便番号" Margin="5" TextChanged="PostalCodeTextBox_TextChanged"/>
            <TextBox x:Name="AddressTextBox" PlaceholderText="住所" Margin="5"/>
            <Button Content="画像選択" Click="PictureButton_Click" Margin="5"/>
            <Image x:Name="PictureImageBox" Height="100" Margin="5"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Content="保存" Click="SaveButton_Click" Margin="5"/>
                <Button Content="更新" Click="UpdateButton_Click" Margin="5"/>
                <Button Content="削除" Click="DeleteButton_Click" Margin="5"/>
            </StackPanel>
            <TextBox x:Name="SearchTextBox" PlaceholderText="検索" Margin="5" TextChanged="SerchTextBox_TextChanged"/>
        </StackPanel>

        <ListView x:Name="PersonListView" Grid.Row="1" SelectionChanged="PersonListView_SelectionChanged"/>
    </Grid>
</Window>