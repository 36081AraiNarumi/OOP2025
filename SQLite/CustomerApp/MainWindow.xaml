<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="顧客管理" Height="500" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 入力フォーム -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="名前" FontSize="15" VerticalAlignment="Center"/>
            <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="電話" FontSize="15" VerticalAlignment="Center"/>
            <TextBox x:Name="PhoneTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="住所" FontSize="15" VerticalAlignment="Center"/>
            <TextBox x:Name="AddressTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>
        </Grid>

        <!-- 操作パネル -->
        <StackPanel Grid.Row="1" Margin="10">
            <Button Content="保存" x:Name="SaveButton" Click="SaveButton_Click"/>
            <Button Content="更新" x:Name="UpdateButton" Click="UpdateButton_Click"/>
            <Button Content="取得" x:Name="ReadButton" Click="ReadButton_Click"/>
            <Button Content="削除" x:Name="DeleteButton" Click="DeleteButton_Click"/>
            <TextBox x:Name="SearchTextBox" Margin="0,5,0,0" FontSize="20" TextChanged="SearchTextBox_TextChanged"/>
            <ListView x:Name="PersonListView" Margin="0,5,0,0" Height="200" SelectionChanged="PersonListView_SelectionChanged_1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Id}"/>
                            <TextBlock Text="{Binding Name}" FontSize="20"/>
                            <TextBlock Text="{Binding Phone}" Foreground="Blue"/>
                            <TextBlock Text="{Binding Address}" Foreground="Gray"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>